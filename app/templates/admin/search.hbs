<div class="search-container">
    <div class="panel panel-default">
        <div class="panel-heading">{{format-html-message (intl-get 'commons.title.search')}}</div>
        <div class="panel-body">
            <form class="search" {{action 'search' on="submit"}}>
                {{#each searchForm.fields as |field|}}
                    {{#if field.isInput}}
                        <div class="clearfix string">
                            <label>{{admin-letter-case content=field.label caseType=caseType}}</label>
                            <div class="controls">
                                {{input name=field.fieldName value=field.value type="text" class="form-control"}}
                            </div>
                        </div>
                    {{/if}}
                    {{#if field.isNumberInput}}
                        <div class="clearfix string">
                            <label>{{admin-letter-case content=field.label caseType=caseType}}</label>
                            <div class="controls">
                                {{admin-select content=field.numberPredicats selectedValue=field.predicat}}
                                {{input name=field.fieldName value=field.value type="number" class="form-control"}}
                            </div>
                        </div>
                    {{/if}}
                    {{#if field.isAutocomplete}}
                        <div class="clearfix string">
                            <label>{{admin-letter-case content=field.label caseType=caseType}}</label>
                            <div class="controls">
                                {{admin-typeahead url=field.url value=field.value name=field.fieldName class="form-control"}}
                            </div>
                        </div>
                    {{/if}}
                    {{#if field.isSelect}}
                        <div class="clearfix string">
                            <label>{{admin-letter-case content=field.label caseType=caseType}}</label>
                            <div class="controls">
                                {{admin-select content=field.options.selectContent selectedValue=field.value prompt=field.options.prompt class="form-control"}}
                            </div>
                        </div>
                    {{/if}}
                    {{#if field.isDate}}
                        <div class="clearfix string">
                            <label>{{admin-letter-case content=field.label caseType=caseType}}</label>
                            <div class="controls">
                                {{bootstrap-datepicker value=field.value autoclose=true format=field.options.format placeholder=field.options.placeholder class="form-control"}}
                            </div>
                        </div>
                    {{/if}}
                    {{#if field.isBoolean}}
                        <div class="clearfix string">
                            <label>{{admin-letter-case content=field.label caseType=caseType}}</label>
                            <div class="controls">
                                {{input type="checkbox" checked=field.value placeholder=field.options.placeholder class="form-control"}}
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
                <div>
                    <button class="search-button btn btn-success" type="submit">{{format-html-message (intl-get 'commons.buttons.search')}}</button>
                    <a href="#" class="search-button btn btn-danger" {{action 'clearSearchForm'}}>{{format-html-message (intl-get 'commons.buttons.clear')}}</a>
                </div>
            </form>
        </div>
    </div>

</div>
